{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":dependencyDashboard"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["action"],
      "pinDigests": true,
      "recreateWhen": "always"
    },
    {
      "description": "Pin all GitHub Actions to commit hash",
      "matchDepTypes": ["action"],
      "pinDigests": true,
      "versioning": "semver",
      "extractVersion": "^v(?<version>.*)$",
      "matchPackageNames": ["/^(?:actions|pnpm)/.*/"]
    },
    {
      "automerge": true,
      "automergeStrategy": "merge-commit",
      "matchDepTypes": ["*"],
      "rangeStrategy": "pin",
      "recreateWhen": "always"
    }
  ],
  "platformAutomerge": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
