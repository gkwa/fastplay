{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["github-actions", "npm"],
  "extends": ["config:best-practices", ":dependencyDashboard"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "merge-commit",
      "matchDepTypes": ["*"],
      "rangeStrategy": "pin",
      "recreateWhen": "always"
    },
    {
      "description": "Pin all GitHub Actions including pnpm",
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "matchPackageNames": ["/^actions//", "/^pnpm//"]
    }
  ]
}
