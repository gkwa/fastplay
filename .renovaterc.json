{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["github-actions", "npm"],
  "extends": ["config:best-practices", ":dependencyDashboard"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "merge-commit",
      "matchDepTypes": ["*"],
      "rangeStrategy": "pin",
      "recreateWhen": "always"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": ["uses: pnpm/action-setup@(?<currentValue>.*?)\\s"],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "pnpm/action-setup",
      "versioningTemplate": "semver"
    }
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  }
}
