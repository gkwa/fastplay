{
  "name": "fastplay",
  "version": "1.0.0",
  "main": "index.js",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "fmt": "prettier --ignore-path=.prettierignore --config=.prettierrc.json --write .",
    "test": "playwright test example.spec.ts",
    "astound": "cross-env ASTOUND_CONFIG=prod playwright test astound.spec.ts",
    "astound:headed": "cross-env ASTOUND_CONFIG=prod playwright test astound.spec.ts --headed",
    "astound:ui": "cross-env ASTOUND_CONFIG=prod playwright test astound.spec.ts --ui",
    "astound:test:mock": "cross-env ASTOUND_CONFIG=test playwright test astound.mock.spec.ts",
    "astound:test:mock:headed": "cross-env ASTOUND_CONFIG=test playwright test astound.mock.spec.ts --headed",
    "astound:test:mock:ui": "cross-env ASTOUND_CONFIG=test playwright test astound.mock.spec.ts --ui",
    "version:major": "pnpm version major",
    "version:minor": "pnpm version minor",
    "version:patch": "pnpm version patch"
  },
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "1.55.0",
    "@types/node": "22.18.0",
    "cross-env": "10.0.0",
    "dotenv": "17.2.2",
    "prettier": "3.6.2"
  }
}
